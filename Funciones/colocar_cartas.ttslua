        -- Contamos cuantos monos hay en la canasta
        Nmonos = 0
        for i = 1,nObjetos do
          carta = objectsInZone[i]
          nombreCarta = carta.getName()
          if (nombreCarta == 'Joker') or (nombreCarta == '2c') or
                 (nombreCarta == '2r') or (nombreCarta == '2p') or
